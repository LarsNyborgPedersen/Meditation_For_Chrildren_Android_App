<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/blue"
    tools:context="com.larsnyborgpedersen.meditationforboern2.MainActivity">


    <TextView
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:typeface="serif"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="32sp"
        android:text="@string/app_name" />



    <ImageView
        android:layout_weight="4.5"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:src="@drawable/logoet2min"/>


    <LinearLayout
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="vertical">
        <Button
            android:id="@+id/chooseMeditationScreenButton"
            android:background="@drawable/knaphvordanmeditereman"
            android:layout_gravity="center_horizontal"
            android:text="@string/chooseMeditationScreenButtonText"
            android:textAllCaps="false"
            android:typeface="serif"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_marginTop="22dp"
            />

        <Button
            android:id="@+id/chooseHowToMeditateScreenButton"
            android:background="@drawable/knaphvordanmeditereman"
            android:layout_gravity="center_horizontal"
            android:text="@string/chooseMeditationScreenButtonText2"
            android:textAllCaps="false"
            android:typeface="serif"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_marginTop="22dp"
            />

        <Button
            android:id="@+id/chooseContactScreenButton"
            android:background="@drawable/knaphvordanmeditereman"
            android:layout_gravity="center_horizontal"
            android:text="@string/chooseMeditationScreenButtonText3"
            android:textAllCaps="false"
            android:typeface="serif"
            android:textColor="@color/blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_marginTop="22dp"
            />
    </LinearLayout>

</LinearLayout>
